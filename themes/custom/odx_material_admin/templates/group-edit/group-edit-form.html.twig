{#
/**
 * @file
 * Theme override for a node edit form.
 *
 * Two column template for the node add/edit form.
 *
 * This template will be used when a node edit form specifies 'node_edit_form'
 * as its #theme callback.  Otherwise, by default, node add/edit forms will be
 * themed by form.html.twig.
 *
 * Available variables:
 * - form: The node add/edit form.
 *
 * @see seven_form_node_form_alter()
 */
#}
{#
  somewhere for apilm/repository bundle, the form.mode gets set as 3dx.
  Unable to trace it in config or code. For now, hotfixing this.
#}
<div class="layout-node-form row clearfix">
  <div class="layout-region s12 m8 l12 col layout-region-node-main">
    {{ form|without('advanced', 'actions', 'status') }}
    {% if odx %}
      {{ form.actions }}
    {% endif %}
  </div>
  {% if not odx %}
    <div class="layout-region s12 m4 offset-l1 l4 col layout-region-node-secondary">
      {{ form.advanced }}
      {{ form.status }}
      {{ form.actions }}
    </div>
  {% endif %}
</div>
